@{
}

@model BookViewModel

@foreach (Book b in Model.Books)
{
    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                @b.Title by @b.Author 
                <span class="badge badge-pill badge-primary" style="float:right">
                </span>
            </h4>
        </div>
        <div class="card-text p-1">
            <div class="text-info badge badge-pill badge-primary" style="float:right">
                <h4>$@b.Price</h4>
            </div>

            Publisher: @b.Publisher <br />
            ISBN: @b.Isbn <br />
            @b.Classification | @b.Category |
            @b.PageCount pages<br />

        </div>
 
    </div>
}

<div page-numbering="@Model.PageInfo" page-action="Index" page-classes-enabled="true"
          page-class="btn" page-class-normal="btn-outline-dark"
          page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>

