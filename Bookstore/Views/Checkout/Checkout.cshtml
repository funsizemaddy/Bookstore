
@{
}

@model Checkout

<h1>Proceed to checkout?</h1>

<form method="post" asp-controller="Checkout" asp-action="Checkout">
    <h4>Ship To:</h4>
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <h4>Address</h4>
    <div class="form-group">
        <label asp-for="AddressLine1">Address Line 1:</label>
        <input asp-for="AddressLine1" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AddressLine2">Address Line 2:</label>
        <input asp-for="AddressLine2" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="City">City:</label>
        <input asp-for="City" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="State">State:</label>
        <input asp-for="State" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ZipCode">ZipCode:</label>
        <input asp-for="ZipCode" class="form-control" />
    </div>

    <div class="float-end">
        <input class="btn btn-primary" type="submit" value="Checkout" />
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
</form>



