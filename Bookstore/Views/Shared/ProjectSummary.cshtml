
@model Book

<div class="card card-outline-primary m-1 p-1">

    <div class="bg-light p-1">
        <h4>@Model.Title by @Model.Author</h4>

        <span class="badge bg-info" style="float:right">
            $@Model.Price
        </span>
    </div>

    <div>

        Publisher: @Model.Publisher <br />
        ISBN: @Model.Isbn <br />
        @Model.Classification | @Model.Category |
        @Model.PageCount pages<br />
    </div>



    <form method="post" asp-page="/Buy">
        <input type="hidden" asp-for="@Model.BookId" />
        <input type="hidden" name="returnURL" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

        <span class="card-text">
            <button type="submit" class="btn btn-success btn-sm float-end">Buy</button>
        </span>
    </form>
</div>