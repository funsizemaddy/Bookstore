

@model IEnumerable<string>

<div class="d-grid gap-2">

    <a asp-controller="Home" asp-action="Index" asp-route-categories="" asp-route-page_number="1" class="btn btn-outline-secondary">Home</a>

    @foreach (string c in Model)
                {
                    <a asp-controller="Home" asp-action="Index" asp-route-categories="@c" class=" btn @(ViewBag.SelectedType == c ? "btn-primary" : " btn btn-outline-secondary")">@c</a>
                }

</div>


